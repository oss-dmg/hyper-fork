{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./target/",
    "preserveConstEnums": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "include": [
    "./app/"
  ],
  "exclude": ["node_modules", "**/node_modules/*", "bin/*", "renderer/*"]
}
